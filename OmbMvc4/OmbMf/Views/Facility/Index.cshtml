@model IEnumerable<OmbMf.Models.Facility>

@{
    ViewBag.Title = "Facilities";
}

<h2>Facilities</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Facility Name
        </th>
        <th>
            Ombudsman
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ombudsman.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FacilityId }) |
            @Html.ActionLink("Details", "Details", new { id=item.FacilityId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FacilityId })
        </td>
    </tr>
}

</table>

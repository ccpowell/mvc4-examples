<div id="tabs">
    <ul>
        <li><a href="#tab-facilities">Facilities</a></li>
        <li><a href="#tab-ombudsmen">Ombudsmen</a></li>
    </ul>
    <div id="tab-facilities">
        <h2>
            Facilities</h2>
        <div>
            <button id="create-facility">
                Create New Facility</button>
        </div>
        <div>
            Filter by Type
            <select id="filter-facility-typeid">
                <option value='0'>Any</option>
                @foreach (var item in ViewBag.FacilityTypeId)
                {
                    <option value='@item.Value'>@item.Text</option>
                }
            </select>
        </div>
        <div>
            Filter by Ombudsman
            <input id="filter-ombudsman-name" type="text" />
        </div>
        <table id="facility-table" class="data-table">
        </table>
    </div>
    <div id="tab-ombudsmen">
        <h2>
            Ombudsmen</h2>
        <div>
            <button id="create-ombudsman">
                Create New Ombudsman</button>
        </div>
        <table id="ombudsman-table" class="data-table">
        </table>
    </div>
</div>
<!-- UI elements -->
<div id="ombudsman-dialog">
    <form class="ombudsman-form" action="">
        <p>
            <label>
                ID:
                <input id="ombdlg-OmbudsmanId" readonly="readonly" type="text" />
            </label>
        </p>
        <p>
            <label>
                Name:
                <input id="ombdlg-Name" type="text" />
            </label>
        </p>
        <p>
            <label>
                User Name:
                <input id="ombdlg-UserName" type="text" />
            </label>
        </p>
        <p>
            <label>
                Email:
                <input id="ombdlg-Email" type="text" />
            </label>
        </p>
        <p>
            <label>
                Address1:
                <input id="ombdlg-Address1" type="text" />
            </label>
        </p>
        <p>
            <label>
                Address2:
                <input id="ombdlg-Address2" type="text" />
            </label>
        </p>
        <p>
            <label>
                City:
                <input id="ombdlg-City" type="text" />
            </label>
        </p>
        <p>
            <label>
                State:
                <input id="ombdlg-State" type="text" />
            </label>
        </p>
        <p>
            <label>
                ZipCode:
                <input id="ombdlg-ZipCode" type="text" />
            </label>
        </p>
        <p>
            <label>
                Phone:
                <input id="ombdlg-Phone" type="text" />
            </label>
        </p>
        <p>
            <label>
                Fax:
                <input id="ombdlg-Fax" type="text" />
            </label>
        </p>
        <button id="ombdlg-acceptEditOmbudsman">
            Accept</button>
        <button id="ombdlg-cancelEditOmbudsman">
            Cancel</button>
    </form>
</div>
<div id="facility-dialog">
    <form class="facility-form" action="">
        <p>
            <label>
                ID:
                <input id="facdlg-FacilityId" readonly="readonly" type="text" />
            </label>
        </p>
        <p>
            <label>
                Name:
                <input id="facdlg-Name" type="text" />
            </label>
        </p>
        <p>
            <label>
                Facility Type:
                <select id="facdlg-FacilityTypeId">
                    @foreach (var item in ViewBag.FacilityTypeId)
                    {
                        <option value='@item.Value'>@item.Text</option>
                    }
                </select>
            </label>
        </p>
        <p>
            <label>
                Number of Beds:
                <input id="facdlg-NumberOfBeds" type="text" />
            </label>
        </p>
        <p>
            <label>
                Ombudsman:
                <input id="facdlg-OmbudsmanName" type="text" />
            </label>
        </p>
        <p>
            <label>
                Address1:
                <input id="facdlg-Address1" type="text" />
            </label>
        </p>
        <p>
            <label>
                Address2:
                <input id="facdlg-Address2" type="text" />
            </label>
        </p>
        <p>
            <label>
                City:
                <input id="facdlg-City" type="text" />
            </label>
        </p>
        <p>
            <label>
                State:
                <input id="facdlg-State" type="text" />
            </label>
        </p>
        <p>
            <label>
                ZipCode:
                <input id="facdlg-ZipCode" type="text" />
            </label>
        </p>
        <p>
            <label>
                Phone:
                <input id="facdlg-Phone" type="text" />
            </label>
        </p>
        <p>
            <label>
                Fax:
                <input id="facdlg-Fax" type="text" />
            </label>
        </p>
        <p class="short-labels">
            <label>
                <input id="facdlg-IsActive" type="checkbox" />
                Active
            </label>
            <label>
                <input id="facdlg-IsMedicaid" type="checkbox" />
                Medicaid
            </label>
            <label>
                <input id="facdlg-IsContinuum" type="checkbox" />
                Continuum
            </label>
        </p>
        <button id="facdlg-acceptEditFacility">
            Accept</button>
        <button id="facdlg-cancelEditFacility">
            Cancel</button>
    </form>
</div>
@section scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/AppJq.js")"></script>
}
